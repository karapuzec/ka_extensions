{% macro button_submit(action, form, title, icon, type = 'primary') %}
	<button type="submit" formaction="{{ action }}" form="{{ form }}" data-toggle="tooltip" title="{{ title }}" class="btn l-button-submit btn-{{ type }}">{% if icon %}<i class="fa {{ icon }}"></i>{% endif %} {% if title %}{{ title }}{% endif %}</button>
{% endmacro %}

{% macro button_js(js, title, icon, type = 'primary') %}
	<button type="submit" {{ js }} data-toggle="tooltip" title="{{ title }}" class="btn l-button-submit btn-{{ type }}">{% if icon %}<i class="fa {{ icon }}"></i>{% endif %} {% if title %}{{ title }}{% endif %}</button>
{% endmacro %}